#: include ./kv_files/entry_add_screen.kv
#: include ./kv_files/meals_screen.kv
<MainKV@BoxLayout>:
    orientation: 'vertical'
MainKV:
    MDToolbar:
    	title: "Calorie Counter"
    	md_bg_color: .2, .2, .2, 1
    	specific_text_color: 1, 1, 1, 1
    	left_action_items:[['menu']]
    	right_action_items: [['dots-vertical'], ['cog']]


    MDBottomNavigation:
        MDBottomNavigationItem:
            name: 'my_meals'
            text: "My Meals"
            icon: 'basket'
            on_enter: app.on_my_meals_screen_pressed(*args)
            MealsScreen:
                id: meals_screen

        MDBottomNavigationItem:
            name: 'add_entry'
            text: "Add Entry"
            icon: 'calendar-plus'
            EntryAddScreen:
                id: entry_add_screen

        MDBottomNavigationItem:
            name: 'daily_screen'
            text: "Daily"
            icon: 'more'
            on_tab_press: app.on_daily_screen_pressed(*args)
            MDBoxLayout:
                MDLabel:
                    text: "Total Calories today:"
                    halign: 'center'
                MDLabel:
                    id: total_cals_label
                    text: "0"
                    halign: 'center'

        MDBottomNavigationItem:
            name: 'trends_screen'
            text: "Trends"
            icon: 'chart-bell-curve-cumulative'

            MDLabel:
                text: "View your trends here"
                halign: 'center'

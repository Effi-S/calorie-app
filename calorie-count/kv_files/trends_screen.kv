<TrendsScreen@MDBoxLayout>:
    orientation: 'vertical'
    MDBoxLayout:
        size_hint: 1, .1
        spacing: dp(5)
        MDFillRoundFlatButton:
            id: trend_start_date_button
            text: "Start Date:"
            md_bg_color: app.theme_cls.primary_color
            on_press: app.show_date_picker(*args)
        MDFillRoundFlatButton:
            text: "End Date:"
            id: trend_end_date_button
            md_bg_color: app.theme_cls.primary_color
            on_release: app.show_date_picker(*args)
        MDFillRoundFlatIconButton:
            text: "Create"
            icon: 'chart-box'
            md_bg_color: app.theme_cls.primary_color
            on_release: app.generate_trend(*args)
    MDBoxLayout:
        size_hint: 1, .1
        MDFillRoundFlatIconButton:
            text: "today"
            icon: 'calendar'
            on_release: app.set_trends_date_range(days_back=0)
        MDFillRoundFlatIconButton:
            text: "week"
            icon: 'calendar-range'
            on_release: app.set_trends_date_range(days_back=7)
        MDFillRoundFlatIconButton:
            text: "month"
            icon: 'calendar-month'
            on_release: app.set_trends_date_range(days_back=30)
    ScrollView:
        do_scroll_y: True
        MDBoxLayout:
            spacing: dp(5)
            size_hint_y: 1.5
            orientation: 'vertical'
            id: trends_layout


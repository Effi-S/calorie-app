<MealsScreen@MDFloatLayout>:
    orientation: 'vertical'
    MDCard:
        size_hint: .9, .8
        pos_hint: {"x": .05, "y": .2}
        size_hint_y: .85
        elevation: 10
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(15)
            MDLabel:
                text: "Meals:"
                size_hint_y: .1

            MDBoxLayout:
                id: my_meals_layout

    MDBoxLayout:
        size_hint: 1, 0.15
        pos_hint: {"x": .5, "y": 0.1}
        MDFloatingActionButton:
            icon: "delete"
            on_press: app.on_delete_meals_pressed(*args)
        MDFloatingActionButton:
            icon: "plus"
            on_press: app.on_add_meal_pressed(*args)
        MDFloatingActionButton:
            icon: "magnify"
            on_press: app.on_search_meal_pressed(*args)
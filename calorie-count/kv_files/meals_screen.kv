<MealsScreen@MDBoxLayout>:
    orientation: 'vertical'
    MDCard:
        size_hint: .9, .6
        pos_hint: {"x": .05}
        padding: 20
        spacing: 20
        elevation: 10
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: "Your Meals:"
                size_hint_y: .1

            MDBoxLayout:
                id: my_meals_layout

            MDBoxLayout:
                size_hint: 1, .2
                pos_hint: {'right': 1}
                MDFloatingActionButton:
                    icon: "delete"
                    pos_hint: {'right': 1}
                    on_press: app.on_delete_meals_pressed(*args)
                MDFloatingActionButton:
                    icon: "plus"
                    pos_hint: {'right': 1}
                    on_press: app.on_add_meal_pressed(*args)
                MDFloatingActionButton:
                    icon: "magnify"
                    pos_hint: {'right': 1}
                    on_press: app.on_search_meal_pressed(*args)